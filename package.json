{
  "name": "jot",
  "version": "0.0.1",
  "description": "Service Worker and PouchDB example app",
  "main": "server.js",
  "scripts": {
    "start": "./node_modules/.bin/babel-node server.js",
    "test": "echo 'Error: no test specified' && exit 1",
    "env": "env",
    "clean": "rm -rf public/js/dist/* && rm -rf public/css/dist/*",
    "prebuild": "npm run clean",
    "build": "npm run build:scripts -s && npm run build:styles -s",
    "build:dev": "npm run build:styles -s",
    "build:scripts": "browserify -d public/js/app.js -i pouchdb -i cloudant -o public/js/dist/app.js && echo '...browserified!'",
    "build:styles": "sassc -m public/sass/app.scss public/css/app.css && echo '...sassed!'",
    "watch:scripts": "watchify -v -d public/js/app.js -i pouchdb -i cloudant -o public/js/dist/app.js",
    "watch:server": "nodemon --exec babel-node server.js",
    "watch:styles": "onchange 'public/sass/*.scss' -v -- npm run build:styles",
    "livereload": "live-reload --delay 2000 --port 9091 public/css/ public/js/dist/",
    "build:watch": "npm run build:dev && parallelshell 'npm run livereload -s' 'npm run watch:server -s' 'npm run watch:scripts -s' 'npm run watch:styles -s'"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/lamplightdev/jot.git"
  },
  "author": "Chris Haynes <chris@lamplightdev.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/lamplightdev/jot/issues"
  },
  "homepage": "https://github.com/lamplightdev/jot#readme",
  "engines": {
    "node": "5.x"
  },
  "dependencies": {
    "autolinker": "*",
    "babel": "^6.0.14",
    "body-parser": "^1.13.3",
    "cloudant": "^1.3.0",
    "connect-redis": "*",
    "cookie-parser": "*",
    "express": "^4.13.3",
    "express-handlebars": "*",
    "express-session": "*",
    "express-state": "^1.3.0",
    "fastclick": "*",
    "handlebars": "^3.0.3",
    "morgan": "*",
    "page": "*",
    "passport": "^0.3.0",
    "passport-google-oauth": "*",
    "pouchdb": "^4.0.1",
    "redis": "^1.0.0"
  },
  "devDependencies": {
    "babel-preset-es2015": "^6.0.14",
    "babelify": "^7.0.2",
    "browserify": "^12.0.1",
    "live-reload": "^1.1.0",
    "minifyify": "^7.1.0",
    "onchange": "^2.0.0",
    "parallelshell": "^2.0.0"
  },
  "browserify": {
    "cache": {},
    "packageCache": {},
    "plugin": [
      "watchify"
    ],
    "transform": [
      [
        "babelify",
        {
          "presets": [
            "es2015"
          ]
        }
      ]
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ]
  }
}
