<div class='jots'>
{{#each jots}}
  <div class='jots__jot jots__jot-{{id}} {{#ifEqual id @root.editJotID}}edit{{/ifEqual}}'>

    <div class='jots__jot__item {{#if fields.done}}jots__jot__item--done{{/if}}'>{{autoLink fields.content}} - {{id}} ({{fields.group}})</div>
    <a class='jots__jot__edit' href='/notes?edit={{id}}' target='_parent'>edit</a>

    <form class='form-note-update form-note-update-{{id}}' data-id='{{id}}' method='post' action='/notes/{{id}}'>
      <input type='text' class='md-form-text' name='content' value='{{fields.content}}'>
      <input type='text' class='md-form-text' name='group' value='{{fields.group}}'>
      <input type='hidden' name='action' value='update'>
      <input type='hidden' name='done-status' value=''>
      <button type='submit'>save</button>
      {{#if fields.done}}
      <button type='submit' name='undone'>undone</button>
      {{else}}
      <button type='submit' name='done'>done</button>
      {{/if}}
    </form>

    <form class='form-note-delete form-note-delete-{{id}}' data-id='{{id}}' method='post' action='/notes/{{id}}'>
      <input type='hidden' name='action' value='delete'>
      <button type='submit'>delete</button>
    </form>

    <a class='edit-cancel' href='/notes'>cancel</a>

  </div>
{{/each}}
</div>
