<div class='md-list'>
{{#each jots}}
  <div class='md-list-item jots__jot jots__jot-{{id}}'>
    <div class='md-list-item__primary-content {{#if fields.done}}jots__jot__item--done{{/if}}'>
      {{autoLink fields.content}}
    </div>
    <div class='md-list-item__secondary-content'>
      <a href='/group/{{fields.group}}'>{{groupName}}</a>, <a href='/group/{{fields.group}}?edit={{id}}#{{id}}'>edit</a>
    </div>
  </div>
{{/each}}
</div>
