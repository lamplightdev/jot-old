<form class='form-jot-add' action='/group/{{group.id}}' method='post'>
  <input type='text' class='md-form-text' name='content' value='' placeholder='New jot'>
  <div class='show-on-focus'>
    {{>colour-selector name='priority' rootColour=group.fields.colour colours=priorities current=priorities.[0]}}
    <input type='hidden' name='group' value='{{group.id}}'>
    <button class='md-form-btn' type='submit'>add</button>
  </div>
</form>

{{>jot-list group=group jots=group.jots}}
