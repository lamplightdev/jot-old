<div class='partial-jot-list'>
  <div class='md-list jot-list'>
  {{#each jots}}
    <div class='md-list-item jots__jot jots__jot-{{id}} {{#ifEqual id @root.editID}}edit{{/ifEqual}}'>
      <a name='{{id}}' id='{{id}}'></a>

      <a class='md-list-item__avatar jots__jot__edit' href='/group/{{fields.group}}?edit={{id}}' data-id='{{id}}'>
        <div class='img' {{#if @root.group.fields.colour}}style='background-color: {{@root.group.fields.colour}}'{{/if}}></div>
      </a>

      <a class='md-list-item__content jots__jot__edit jots__jot__item {{#if fields.done}}jots__jot__item--done{{/if}}' href='/group/{{fields.group}}?edit={{id}}' data-id='{{id}}'>
        <div class='md-list-item__primary-content'>
          {{autoLink fields.content}}
        </div>
      </a>

      <div class='md-list-item__content jots__jot__forms'>
        <div class='md-list-item__primary-content'>
          <form class='form-jot-update form-jot-update-{{id}}' data-id='{{id}}' method='post' action='/jot/{{id}}'>
            <input type='text' class='md-form-text' name='content' value='{{fields.content}}'>
            <input type='hidden' name='group' value='{{fields.group}}'>
            <input type='hidden' name='action' value='update'>
            <input type='hidden' name='done-status' value=''>
            <button class='md-form-btn' type='submit'>save</button>
            {{#if fields.done}}
            <button class='md-form-btn' type='submit' name='undone'>undone</button>
            {{else}}
            <button class='md-form-btn' type='submit' name='done'>done</button>
            {{/if}}
          </form>

          <form class='form-jot-delete form-jot-delete-{{id}}' data-id='{{id}}' data-group-id='{{fields.group}}' method='post' action='/jot/{{id}}'>
            <input type='hidden' name='action' value='delete'>
            <button class='md-form-btn' type='submit'>delete</button>
          </form>
        </div>
      </div>

      <a class='md-list-item__action jots__jot__edit' href='/group/{{fields.group}}?edit={{id}}' data-id='{{id}}'>
        <img src='/images/pencil.svg' alt='Edit'>
      </a>

    </div>
  {{/each}}
  </div>
</div>
